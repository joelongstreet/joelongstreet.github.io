doctype html
html(lang='en')
  head
    title= title
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='author' content='Joe Longstreet')
    meta(name='creator' content='Joe Longstreet')
    meta(name='publisher' content='Joe Longstreet')
    meta(name='viewport' content='width=device-width initial-scale=1')
    meta(name='keywords' content=keywords)
    meta(name='description' content=excerpt)
    link(href='http://fonts.googleapis.com/css?family=Lora|Open+Sans+Condensed:700', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/public/style.css')
    link(rel='icon', href='public/favicon.ico')
    link(rel='apple-touch-icon', href='public/apple-touch-icon.png')

    block head

  body
    header.primary
      .contained
        h1
          a(href='/') Joe Longstreet
        h2 An inventor / maker living in Kansas City, Missouri

    article.primary
      block article

    footer.primary
      nav.contained
        ul
          li
            a(href='https://github.com/joelongstreet/', target='_blank') on Github
          li
            a(href='http://twitter.com/joelongstreet', target='_blank') on Twitter
          li
            a(href='http://instagram.com/joelongstreet', target='_blank') on Instagram

    block extras
    include ./_analytics.jade
